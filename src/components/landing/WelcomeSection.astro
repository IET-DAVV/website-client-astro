---
import { Icon } from "astro-icon";
---

<section class="container">
  <div class="subContainer">
    <div class="row">
      <span class="line"></span>
      <span>WELCOME TO</span>
    </div>
    <div class="name">IET-DAVV</div>
    <div
      class="row"
      style={{
        width: "90%",
      }}
    >
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis
      molestie, dictum est a, mattis tellus. Sed dignissim, metus nec fringilla
      accumsan, risus sem sollicitudin lacus, ut interdum tellus elit sed risus.
    </div>
    <div class="row">
      <span>EXPLORE MORE</span>
      <button class="exploreMoreBtn">
        <Icon name="ArrowCircleRight" width={50} />
      </button>
    </div>
  </div>
  <div
    class="subContainer"
    style={{
      alignItems: "center",
      padding: "4rem 0",
    }}
  >
    <img
      src="/assets/images/MBLOCK_FRONT.svg"
      alt="IETDAVV"
      class="collegeImage"
    />
  </div>
</section>

<style lang="scss">
  .container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: white;
    font-family: sans-serif;
    min-height: 100vh;
    flex-wrap: wrap;
    background-color: var(--clr-primary);
    width: 100%;
    .subContainer {
      padding: 1rem;
      padding-left: 5rem;
      width: 50%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      gap: 5vh;
      .name {
        font-size: 4rem;
        line-height: 140%;
        font-family: serif;
      }
      .row {
        width: 80%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
        .line {
          width: 25%;
          height: 2px;
          background-color: white;
        }
      }
    }
  }
  .collegeImage {
    height: 70%;
    width: 70%;
  }

  .exploreMoreBtn {
    background-color: transparent;
    border: none;
    outline: none;
    cursor: pointer;
  }
  @media screen and (max-width: 768px) {
    .container {
      flex-direction: column;
      .subContainer {
        padding: 4rem 0rem 4rem 3rem;
        width: 100%;
      }
      :nth-child(2).subContainer {
        display: none;
      }
    }
  }
</style>
