<style>
  .footer {
    background-color: black;
    color: white;
    padding: 3rem;
  }

  .footer-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 2rem;
    border-bottom: 1px solid #ffffff45;
    padding-bottom: 2rem;
  }

  .footer-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .footer-col {
    flex-basis: calc(25% - 1rem);
    padding-right: 1rem;
    margin-bottom: 1rem;
  }

  .footer-col:nth-child(1) {
    border-right: 1px solid #ffffff45;
  }

  .footer-col-title {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .footer-col-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-col-item {
    display: flex;
    align-items: base-line;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .footer-col-item i {
    margin-right: 0.5rem;
  }

  .footer-col-item span {
    color: white;
  }

  .footer-col-item a {
    color: white;
    text-decoration: none;
  }

  .footer-col-item a:hover {
    text-decoration: underline;
  }

  .footer-social {
    display: flex;
    justify-content: flex-end;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-social-item {
    margin-left: 1rem;
    border: 1px solid white;
    border-radius: 100%;
    padding: 0.5rem;
  }

  .footer-social-item:first-child {
    margin-left: 0;
  }

  .footer-social-item a {
    color: white;
    text-decoration: none;
  }

  .footer-social-item a:hover {
    color: #666;
  }

  .footer-address {
    color: white;
  }
  @media screen and (max-width: 768px) {
    .footer-row {
      flex-direction: column;
      align-items: center;
    }

    .footer-col {
      flex-basis: 100%;
      border-right: none;
      padding-right: 0;
      margin-bottom: 2rem;
    }

    .footer-col:nth-child(1) {
      border-right: none;
    }

    .footer-social {
      justify-content: flex-start;
    }

    .footer-form input[type="email"] {
      flex-basis: 100%;
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .footer-form button[type="submit"] {
      flex-basis: 100%;
    }
  }
</style>
